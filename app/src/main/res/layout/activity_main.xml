<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#84b5f1e3"
    android:clickable="true"
    android:visibility="visible">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ARE YOU READY TO PUT YOUR PHONE"
    android:id="@+id/phoneaway"
    android:textColor="#ff002152"
    android:textSize="55dp"
    android:gravity="center"
    android:textAlignment="center"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AWAY?"
        android:textStyle="bold"
        android:id="@+id/away"
        android:textColor="#ffffffff"
        android:textSize="60dp"

        android:layout_below="@+id/phoneaway"
        android:layout_alignStart="@+id/button" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textColor="#ff002152"
        android:gravity="right"
        android:textSize="65dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/away"
        android:layout_toEndOf="@+id/away" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:textSize="60dp"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:height="100dp"
        android:width="200dp"
        android:background="#8371cfb9"
        android:visibility="visible"
        android:focusableInTouchMode="true"
        android:onClick="yes"/>

</RelativeLayout>
